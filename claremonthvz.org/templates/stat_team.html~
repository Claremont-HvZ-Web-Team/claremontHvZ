	<script type="text/javascript" src="/media/js/jquery.dataTables.js"></script>
	<script type="text/javascript" src="https://www.google.com/jsapi"></script>
<script type="text/javascript">
	google.load("visualization", "1", {packages:["corechart"]});
	google.setOnLoadCallback(drawAll);
	function drawChart(kind) {
		var data = new google.visualization.DataTable();
			data.addColumn('string', kind);
			data.addColumn('number', '{{ category|title }}s');
			if(kind=="School"){
				data.addRows([
{% for s in schools %}
					['{{ s.name }}',    {{ s.members }}],
{% endfor %}
				]);
			}else if(kind=="Year"){
				data.addRows([
{% for y in years %}
					['{{ y.name }}',    {{ y.members }}],
{% endfor %}
				]);
			}else if(kind=="Dorm"){
				data.addRows([
{% for d in dorms %}
					['{{ d.name }}',    {{ d.members }}],
{% endfor %}
				]);
			}

			var options = {
				width: 325, height: 250,
				title: name
			};

			var chart = new google.visualization.PieChart(document.getElementById('graph_'+kind));
			chart.draw(data, options);
	}

	function drawAll() {
		drawChart("School");
		drawChart("Year");
		drawChart("Dorm");
	}

	$(document).ready(function() {
		$('#playerList').dataTable({
			"aaSorting": [{% if category == "zombie" %}[4,'desc'],{% endif %}[5,'asc']],
			"aoColumns": [
				/* First */ null,
				/* Last */ null,
				/* School */ null,
				/* Year */ null,
				/* Class */ null,
				/* Meals/Hardcore */ null,
			],
			"bPaginate": false,
			"bFilter": false,
			"bSort": true,
			"bInfo": false,
			"bAutoWidth": true,
			"sScrollY": "400px",
			"sDom": "frtiS",
			"bDeferRender": true
		});
	});

</script>
	<link rel="stylesheet" type="text/css" href="/media/css/jquery.dataTables.css" />

	<script type="text/javascript">
		google.load("visualization", "1", {packages:["corechart"]});
		function drawChart() {
		var data = new google.visualization.DataTable();
			data.addColumn('string', 'Team');
			data.addColumn('number', 'Players');
			data.addRows([
				['Humans',    {{ humans }}],
				['Zombies',   {{ zombies }}],
			]);

			var options = {
				width: 325, height: 250,
				title: 'All Schools',
		              colors: ['hotpink', 'green'],
				backgroundColor: 'black',
				legend: {position: 'bottom', textStyle: {color: 'white', fontSize: 14}},
				titleTextStyle:  {color: 'white', fontSize: 18}
			};

			var chart = new google.visualization.PieChart(document.getElementById('all_players'));
			chart.draw(data, options);
		}
		function drawChart2(grouping,team) {
		var data = new google.visualization.DataTable();
			data.addColumn('string', 'Team');
			data.addColumn('number', 'Players');
			if(grouping=="School"){
				if(team=="Player"){
					data.addRows([
						{% for s in schools %}
							['{{ s.name }}', {{ s.humans }}+{{ s.zombies }}],
						{% endfor %}
					]);
				}else if(team=="Human"){
					data.addRows([
						{% for s in schools %}
							['{{ s.name }}', {{ s.humans }}],
						{% endfor %}
					]);
				}else if(team=="Zombie"){
					data.addRows([
						{% for s in schools %}
							['{{ s.name }}', {{ s.zombies }}],
						{% endfor %}
					]);
				}
			}else if(grouping=="Year"){
				if(team=="Player"){
					data.addRows([
						{% for y in years %}
							['{{ y.year }}', {{ y.humans }}+{{ y.zombies }}],
						{% endfor %}
					]);
				}else if(team=="Human"){
					data.addRows([
						{% for y in years %}
							['{{ y.year }}', {{ y.humans }}],
						{% endfor %}
					]);
				}else if(team=="Zombie"){
					data.addRows([
						{% for y in years %}
							['{{ y.year }}', {{ y.zombies }}],
						{% endfor %}
					]);
				}
			}

			var options = {
				width: 325, height: 250,
				title: team+'s By '+grouping,
				backgroundColor: 'black',
				legend: {position: 'right', textStyle: {color: 'white'}},
				titleTextStyle:  {color: 'white', fontSize: 18}
			};

			var chart = new google.visualization.PieChart(document.getElementById(team+'_by_'+grouping));
			chart.draw(data, options);
		}
	function drawCols(){
		var data = new google.visualization.DataTable();
			data.addColumn('string', 'Time');
			data.addColumn('number', 'Meals');
			data.addRows([
				[ 'Start', 0],
			{% if mph|length == 0 %}
				[ 'Outbreak', 1],
			{% endif %}
			{% for m in mph:"hour" %}
				[ '{{ m.hour|date:"D g A" }}', {{ m.meals }} ],
			{% endfor %}
        		]);

		var options = {
			title: 'Meals per Hour',
			titleTextStyle: {color: 'white', fontSize: 18},
			width: 1000,
			height: 250,
			backgroundColor: 'black',
			hAxis: {slantedText: false, maxAlternation: 1, textStyle: {color: 'green'}},
			legend: {position: 'none'},
			vAxis: {textPosition: 'none', gridlines: {count:0} }
		};

		var chart = new google.visualization.ColumnChart(document.getElementById('mph_div'));
		chart.draw(data, options);
	}

	function drawArea(){
		var data = new google.visualization.DataTable();
			data.addColumn('string', 'Time');
			data.addColumn('number', 'Humans');
			data.addColumn('number', 'Zombies');
			data.addRows([
				[ 'Start', {{ humans|add:zombies }}, 0],
			{% if mun|length == 0 %}
				[ 'Outbreak', {{ humans|add:zombies|add:-1 }}, 1],
			{% endif %}
			{% for m in mun|dictsort:"hour" %}
				[ '{{ m.hour|date:"D g A" }}', {{ m.humans }}, {{ m.zombies }} ],
			{% endfor %}
        		]);

		var options = {
			title: 'Teams by Hour',
			titleTextStyle: {color: 'white', fontSize: 18},
			width: 1000,
			height: 250,
			backgroundColor: 'black',
			hAxis: {slantedText: false, maxAlternation: 1, textStyle: {color: 'green'}},
			legend: {position: 'none'},
			vAxis: {textPosition: 'none', gridlines: {count:0}, minValue: 0},
			series: [{color: 'hotpink'}, {color: 'green'}]
		};

		var chart = new google.visualization.AreaChart(document.getElementById('mun_div'));
		chart.draw(data, options);
	}
		$(document).ready(function() {
			drawChart();
			drawChart2("School","Player");
			drawChart2("Year","Player");
			drawCols();
			drawArea();
			$('#humanList').dataTable({
				"aaSorting": [[2,'desc']],
				"aoColumns": [
					/* First */ null,
					/* Last */ null,
					/* Class */ null,
				],
				"bPaginate": false,
				"bFilter": false,
				"bSort": true,
				"bInfo": false,
				"bAutoWidth": true,
				"sScrollY": "400px",
				"sDom": "frtiS",
				"bDeferRender": true
			});
			$('#zombieList').dataTable({
				"aaSorting": [[3,'desc'],[2,'asc']],
				"aoColumns": [
					/* First */ null,
					/* Last */ null,
					/* Class */ null,
					/* Meals */ null,
				],
				"bPaginate": false,
				"bFilter": false,
				"bSort": true,
				"bInfo": false,
				"bAutoWidth": true,
				"sScrollY": "400px",
				"sDom": "frtiS",
				"bDeferRender": true
			});
			$('#mealList').dataTable({
				"aaSorting": [[3,'desc']],
				"aoColumns": [
					/* Eater */ null,
					/* Eaten */ null,
					/* Time */ { "bVisible": false },
					/* Pretty Time */ { "iDataSort": 2 },
					/* Location */ null,
					/* Description */ null
				],
				"bPaginate": false,
				"bFilter": false,
				"bSort": true,
				"bInfo": false,
				"bAutoWidth": true,
				"sScrollY": "400px",
				"sDom": "frtiS",
				"bDeferRender": true
			});
		});

	</script>
	

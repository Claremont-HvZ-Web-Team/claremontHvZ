				"bInfo": false,
				"bAutoWidth": true,
				"sScrollY": "250px",
				"sDom": "frtiS",
				"bDeferRender": true
			});
			$('#mealList').dataTable({
				"aaSorting": [[3,'desc']],
				"aoColumns": [
					/* Eater */ null,
